<div class="container-fluid">

    <div class="card-body">
        <div class="table-responsive">
            <div class="header_table">
                <p>Data Pesanan
                </p>
            </div class="table_field">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="data-table">
                    <tr>
                        <th>No</th>
                        <th>Pemesan</th>
                        <th>Address</th>
                        <th>Kategori Layanan</th>
                        <th>Deskripsi</th>
                        <th>Nama Tukang</th>
                        <th>Total Pembayaran</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% let no=1; data.forEach(element=> { %>
                        <tr>
                            <th scope="row">
                                <%= no %>
                            </th>
                            <td>
                                <%= element.pemesan.name %>
                            </td>
                            <td>
                                <%= element.address %>
                            </td>
                            <td>
                                <%= element.service_category %>
                            </td>
                            <td>
                                <%= element.description %>
                            </td>
                            <td>
                                <%= element.tukang.name %>
                            </td>
                            <td>
                                <%= element.payment %>
                            </td>
                            <td>
                                <a type="button" href="/pesanan/delete/<%= element.id %>"
                                    class="btn btn-danger">Delete</a>
                            </td>
                        </tr>

                        <% no++ }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>